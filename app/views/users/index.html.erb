<div class="container">
  <div class="row">
    <div class="search_form">
      <%= form_with url: post_images_search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
      <table class = "table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user.id) do %>
                <%= image_tag user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td id="<%= user.id %>followings-count">
              <%= render "relationships/followings", user: user %>
            </td>
            <td id="<%= user.id %>followers-count">
              <%= render "relationships/followers", user: user %>
            </td>
            <td id="<%= user.id %>follow">
              <% if user.id != current_user.id %>
                <%= render "relationships/follow-btn", user: user %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
